$("#balance-bank_account").html("<%= j render(partial: 'balance') %>");
$("#balance-bank_account").modal({
  ready: function () {
    var em = $("em#total-balance").html();
    var balance = em.trim().split("$")[1];
    if(balance > 0) $("em#total-balance").addClass('green-text');
    else if(balance < 0) $("em#total-balance").addClass('red-text');
    else $("em#total-balance").addClass('grey-text');
  }
});
$("#balance-bank_account").modal('open');
