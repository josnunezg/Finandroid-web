<% salaries = @balance.salaries %>
<% expenses = @balance.expenses %>
<div class="modal-content">
  <h3>
    <%= @balance.name %>
    <small>
      Saldo
      <em id="total-balance">
        $<%= @balance.balance %>
      </em>
    </small>
  </h3>
  <div class="row">
    <div class="col s6">
      <ul class="collection with-header">
        <li class="collection-header">
          <h5>
            <%= salaries.model_name.human(count: 2) %>
          </h5>
        </li>
        <% salaries.each do |sal| %>
          <li class="collection-item">
            <%= sal.name %>
            <span class="secondary-content green-text">
              $<%= sal.amount %>
            </span>
          </li>
        <% end %>
        <li class="collection-item center">
          <h6 class="align-center">Total</h6>
        </li>
        <li class="collection-item center">
          <h6 class="align-center">$<%= salaries.total %></h6>
        </li>
      </ul>
    </div>
    <div class="col s6">
      <ul class="collection with-header">
        <li class="collection-header">
          <h5>
            <%= expenses.model_name.human(count: 2) %>
          </h5>
        </li>
        <% expenses.each do |exp| %>
          <li class="collection-item">
            <%= exp.name %>
            <span class="secondary-content red-text">
              $<%= exp.amount %>
            </span>
          </li>
        <% end %>
        <li class="collection-item center">
          <h6 class="align-center">Total</h6>
        </li>
        <li class="collection-item center">
          <h6 class="align-center">$<%= expenses.total %></h6>
        </li>
      </ul>
    </div>
  </div>
</div>
<div class="modal-footer">
  <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat">
    Cerrar
  </a>
</div>
