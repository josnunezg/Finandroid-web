<div class="card-panel large hoverable" style= "height: 30rem; max-height: 30rem">
  <div class="card-contet">
    <table class="highlight bordered centered responsive-table">
      <thead class="">
        <tr>
          <th><%= Salary.human_attribute_name(:name) %></th>
          <th><%= Salary.human_attribute_name(:description) %></th>
          <th><%= Salary.human_attribute_name(:bank_account_id) %></th>
          <th><%= Salary.human_attribute_name(:amount) %></th>
        </tr>
      </thead>
      <tbody id="body-table-salary">
        <% @salaries.each do |sal| %>
          <tr onclick="showSalary(<%= sal.id %>);" id="<%= "salary-#{sal.id}-tr" %>" style="cursor: pointer !important;">
            <td><%= sal.name %></td>
            <td><%= sal.description.try(:truncate,20) %></td>
            <td><%= sal.bank_account.try(:name) %></td>
            <td>$<%= sal.processed_ammount %>.-</td>
            <%= link_to "",salary_path(sal), remote: true, style: "display: none", id: "salary-#{sal.id}-link" %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>


<div class="modal modal-fixed-footer" id="modal-salary">
</div>

<div class="card-panel center card-balance hoverable z-depth-4">
  <h5 id="amount-salaries">$<%= @salaries.sum(:amount) %></h5>
</div>
