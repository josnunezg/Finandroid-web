<div class="col s6 offset-s3">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <div class="card sticky-action z-depth-4">
      <div class="card-content">
        <span class="card-title">Cambiar contrase単a</span>
        <%= devise_error_messages! %>
        <%= f.hidden_field :reset_password_token %>

        <div class="input-field">
          <%= f.password_field :password, autofocus: true, autocomplete: "off", placeholder: "#{@minimum_password_length} caracteres minimo", class: "validate" %>
          <%= f.label :password, "Nueva contrase単a" %>
        </div>

        <div class="input-field">
          <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "#{@minimum_password_length} caracteres minimo", class: "validate" %>
          <%= f.label :password_confirmation, "Confirma tu nueva contrase単a" %>
        </div>

        <%= f.submit "Cambiar contrase単a", class: "btn btn-block btn-large", style: "margin-top: 2em" %>
        <div class="actions">
        </div>
      </div>
      <div class="card-action">
        <%= render "users/shared/links" %>
      </div>
    </div>
  <% end %>
</div>
