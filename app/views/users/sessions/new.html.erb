<div class="col m12 l6 xl6 offset-l3 offset-xl3">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "") do |f| %>
    <div class="card sticky-action z-depth-4">
      <div class="card-content">
        <div class="input-field">
          <%= f.text_field :username, autofocus: true, class: "validate" %>
          <%= f.label :username%>
        </div>

        <div class="input-field">
          <%= f.password_field :password, autocomplete: "off", class: "validate" %>
          <%= f.label :password %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="form-field">
            <div class="custom-control custom-checkbox">
              <%= f.check_box :remember_me%>
              <%= f.label :remember_me%>
            </div>
          </div>
        <% end -%>
        <%= f.submit "Ingresar", class: "btn btn-block btn-large", style: "margin-top: 2em" %>
      </div>
      <div class="card-action">
        <%= render "users/shared/links" %>
      </div>
    </div>
  <% end %>
</div>
