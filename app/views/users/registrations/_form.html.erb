<%= form_for(resource, as: resource_name, url: registration_path(resource_name), remote: true, html: { method: :put  }) do |f| %>
  <div class="modal-content">
    <%= devise_error_messages! %>

    <div class="row">
      <div class="input-field col m12 l6 xl6">
        <%= f.text_field :first_name, class: "validate" %>
        <%= f.label :first_name, class: "active" %>
      </div>
      <div class="input-field col m12 l6 xl6">
        <%= f.text_field :last_name, class: "validate" %>
        <%= f.label :last_name, class: "active" %>
      </div>
      <div class="input-field col m12 l6 xl6">
        <%= f.text_field :username, class: "validate" %>
        <%= f.label :username, class: "active" %>
      </div>
      <div class="input-field col m12 l6 xl6">
        <%= f.email_field :email, autocomplete: "email", class: "validate" %>
        <%= f.label :email, class: "active" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Actualmente estamos esperando la confirmacion de: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="input-field col m12 l6 xl6">
        <%= f.password_field :password, autocomplete: "off", placeholder: "#{@minimum_password_length} characters minimum", class: "validate" %>
        <%= f.label :password, class: "active" %> <i>(Deja en blanco si no quieres cambiar)</i>
      </div>

      <div class="input-field col m12 l6 xl6">
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "#{@minimum_password_length} characters minimum", class: "validate" %>
        <%= f.label :password_confirmation, class: "active" %>
      </div>

      <div class="input-field col m12 l12 xl12">
        <%= f.password_field :current_password, autocomplete: "off", class: "validate" %>
        <%= f.label :current_password %> <i>(Necesitamos que ingreses tu contrase√±a para hacer los cambios)</i>
      </div>
    </div>
  </div>
  <div class="modal-footer">
    <%= f.submit "Actualizar", class:"modal-action waves-effect waves-green btn-flat", remote: true %>
  </div>
<% end %>
