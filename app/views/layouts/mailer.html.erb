<html>
  <head>

    <style>
      .container {
        padding: 2em;
        background-color: #ffffff;
        max-width: 50%;
        max-height: 50%;
        margin: 10em 10em 10em 17em;
        box-shadow: 5px 5px 15px #444;
      }

      .btn {
        border: 2px solid;
        padding: 1em;
        text-decoration: none;
        border-color: #00bcd4;
        box-shadow: 2px 2px 10px #444;
        border-radius: 10px;
        color: #ffff;
        background-color: #00bcd4;
        text-transform: uppercase;
        font-size: 0.8em;
      }

      a:hover .btn {
        box-shadow: 5px 5px 15px #444;
      }

      p {
        font-size: 1.2em;
        text-align: center;
      }

      h2 {
        text-align: center;
      }
      .title {
        color: white;
        border-bottom: 2px;
        text-align: center;
        position: fixed;
        top: 0;
        left: 0;
        margin-bottom: 100px;
        width: 100%;
        box-shadow: 0 5px 10px #444;
        font-size: 1.2em;
      }
    </style>
  </head>
  <body style="background-color: #00bcd4">
      <nav class="title">
        <h1>Finandroid</h1>
      </nav>
      <div class="container">
        <%= yield %>
      </div>
  </body>
</html>
