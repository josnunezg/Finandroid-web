<% if @summary.errors.full_messages.any? %>
  <% @summary.errors.full_messages.each do |msg| %>
    Materialize.toast("<%= msg %>", 3000, "red rounded");
  <% end %>
<% else %>
  $("#modal-summary").modal('close');
  $("#summary-<%= @summary.id %>").html("<%= j render(partial: @summary) %>");
  $('.modal').modal();
  Materialize.toast("Resumen actualizado", 3000, "green rounded");
<% end %>
