<% if @category.errors.full_messages.any? %>
  <% @category.errors.full_messages.each do |msg| %>
    Materialize.toast("<%= msg %>", 4000, 'red rounded');
  <% end %>
<% else %>
  var id = "<%= @category.id %>";
  $("#modal-category").modal('close');
  $("#category-"+id).html("<%= j render(partial: @category) %>");
  $('.modal').modal();
  Materialize.toast("Categoria actualizada", 4000, 'green rounded');
<% end %>
