<div class="card horizontal hoverable" style="min-height: 11.5rem !important">
  <div class="card-stacked">
    <div class="card-content">
      <h4>
        <%= category.default ? t("categories.#{category.name}") : category.name %>
        <% if category.default %>
          <span class="badge">
            <%= Category.human_attribute_name(:default) %>
          </span>
        <% end %>
      </h4>
    </div>
    <% if can? :manage, category %>
      <div class="card-action">
        <%= link_to t('actions.edit', model: ''), edit_category_path(category), remote: true %>
        <a class="modal-trigger" href="#delete-confirm-<%= category.id %>"><%= t('general.delete') %></a>
      </div>
    <% end %>
  </div>
</div>

<div id="delete-confirm-<%= category.id %>" class="modal bottom-sheet">
  <div class="modal-content">
    <h2 class="center">Â¿Estas seguro?</h2>
    <div class="container center">
      <div class="row">
        <div class="col s6 center">
          <%= link_to t('general.yes'), category_path(category), method: :delete, remote: true, class: 'btn red btn-block' %>
        </div>
        <div class="col s6 center">
          <a href="#!" class="modal-action modal-close waves-effect waves-green btn btn-block white black-text">
            <%= t('general.no') %>
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
