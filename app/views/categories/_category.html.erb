<div class="card horizontal hoverable" style="min-height: 11.5rem !important">
  <div class="card-stacked">
    <div class="card-content">
      <h4>
        <%= category.default ? t("categories.#{category.name}") : category.name %>
        <% if category.default %>
          <span class="badge">
            <%= Category.human_attribute_name(:default) %>
          </span>
        <% end %>
      </h4>
    </div>
    <% if can? :manage, category %>
      <div class="card-action">
        <%= link_to "Editar", edit_category_path(category) %>
        <%= link_to "Eliminar", category_path(category), method: :delete %>
      </div>
    <% end %>
  </div>
</div>
